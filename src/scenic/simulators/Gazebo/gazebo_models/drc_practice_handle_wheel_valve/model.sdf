      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://drc_practice_handle_wheel_valve/meshes/handle_wheel_valve.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <bounce>
            <restitution_coefficient>0.01</restitution_coefficient>
            <threshold>5.0</threshold>
          </bounce>
          <friction>
            <ode>
