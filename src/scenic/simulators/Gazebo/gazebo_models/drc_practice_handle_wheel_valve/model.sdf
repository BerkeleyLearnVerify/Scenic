<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="handle_wheel_valve">
    <link name="handle">
      <inertial>
        <pose>0.03 0 0.01 0 0 0</pose>
        <mass>4.6114</mass>
        <inertia>
          <ixx>0.0252</ixx>
          <ixy>-0.0009</ixy>
          <ixz>0.0000</ixz>
          <iyy>0.0129</iyy>
          <iyz>0.0000</iyz>
          <izz>0.0143</izz>
        </inertia>
